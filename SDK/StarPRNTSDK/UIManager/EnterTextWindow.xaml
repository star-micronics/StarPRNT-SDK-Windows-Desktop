<Window x:Class="StarPRNTSDK.EnterTextWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StarPRNTSDK"
        mc:Ignorable="d"
        Style="{StaticResource DialogStyle}">

    <StackPanel Orientation="Vertical"  Margin="20, 0, 20, 20" >
        <Label x:Name="TitleLabel" Style="{StaticResource DialogTitleStyle}"/>

        <StackPanel x:Name="ContainerStackPanel" Orientation="Vertical" />

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button x:Name="AcceptButton" Grid.Column="0" Content="OK" Style="{StaticResource DialogButtonStyle}" Click="AcceptButton_Click"  Margin="0, 10, 0, 0" />

            <Button x:Name="CancelButton" Grid.Column="2" Content="Cancel" Style="{StaticResource DialogButtonStyle}" Click="CancelButton_Click" Margin="0, 10, 0, 0" />
        </Grid>

    </StackPanel>
</Window>
