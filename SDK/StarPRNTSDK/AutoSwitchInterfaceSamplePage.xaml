<Page x:Class="StarPRNTSDK.AutoSwitchInterfaceSamplePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:StarPRNTSDK"
      mc:Ignorable="d"
      d:DesignHeight="1200" d:DesignWidth="1200"
      Title="AutoInterfaceSelectSamplePage">

    <local:CustomScrollViewer >
        <StackPanel Orientation="Vertical">
            <Label Content="{Binding Source={StaticResource ResourceManager}, Path=AutoSwitchInterfaceSamplePageTitle}" Style="{StaticResource PageTitleStyle}" />

            <Label Content="How to test AutoSwitch Interface function&#xa;&#xa;Step 1: Perform Bluetooth pairing and also connect to LAN to take advantage of the AutoSwitch Interface feature.&#xa;Step 2: Connect to the printer via USB and press the Print button.&#xa;Step 3: Disconnect the USB cable and press the Print button.&#xa;            You can automatically connect to a printer via Bluetooth or LAN interface and print a test receipt." FontSize="20" Margin="0, 10, 0, 0" />

            <Button Content="Print" HorizontalAlignment="Right" FontSize="20" Padding="10, 0, 10, 0" Margin="0, 10, 20, 0" Click="PrintButton_Click"/>
        </StackPanel>
    </local:CustomScrollViewer>
</Page>
